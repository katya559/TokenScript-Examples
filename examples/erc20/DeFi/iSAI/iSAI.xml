<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE token  [
        <!ENTITY style SYSTEM "../shared.css">
        <!ENTITY supply.en SYSTEM "supply.en.shtml">
        <!ENTITY withdraw.en SYSTEM "withdraw.en.shtml">
        <!ENTITY enable.en SYSTEM "enable.en.shtml">
        ]>
<ts:token xmlns:ts="http://tokenscript.org/2020/03/tokenscript"
          xmlns:xhtml="http://www.w3.org/1999/xhtml"
          xmlns:xml="http://www.w3.org/XML/1998/namespace"
          xsi:schemaLocation="http://tokenscript.org/2020/03/tokenscript http://tokenscript.org/2020/03/tokenscript.xsd"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          custodian="false"
>
    <ts:name>
        <ts:string xml:lang="en">bZx iSAI</ts:string>
    </ts:name>
    <ts:contract name="iSAI" interface="erc20">
        <ts:address network="1">0x14094949152eddbfcd073717200da82fed8dc960</ts:address>
    </ts:contract>
    <ts:contract name="SAI" interface="erc20">
        <ts:address network="1">0x89d24A6b4CcB1B6fAA2625fE562bDD9a23260359</ts:address>
    </ts:contract>
    <ts:contract name="hydro">
        <ts:address network="1">0x241e82C79452F51fbfc89Fac6d912e021dB1a3B7</ts:address>
    </ts:contract>
    <ts:origins>
        <ts:ethereum contract="iSAI"/>
    </ts:origins>

    <ts:cards>
        <ts:token-card>
            <ts:view-iconified/>
            <ts:view>
            </ts:view>
        </ts:token-card>

        <ts:action>
            <ts:name>
                <ts:string xml:lang="en">Enable</ts:string>
            </ts:name>
            <ts:transaction>
                <ts:ethereum function="approve" contract="SAI" as="bool">
                    <ts:data>
                        <ts:address>0x14094949152eddbfcd073717200da82fed8dc960</ts:address>
                        <ts:uint256>115792089237316195423570985008687907853269984665640564039457584007913129639935</ts:uint256>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <style type="text/css">&style;</style>
            <ts:view xml:lang="en">&enable.en;</ts:view>
        </ts:action>

        <ts:action>
            <ts:name>
                <ts:string xml:lang="en">Supply</ts:string>
            </ts:name>
            <ts:attribute-type id="mintAmount" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">Amount to mint</ts:string>
                </ts:name>
                <ts:origins>
                    <ts:user-entry as="e18"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:transaction>
                <ts:ethereum function="mint" contract="iSAI" as="uint">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                        <ts:uint256 ref="mintAmount"/>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <style type="text/css">&style;</style>
            <ts:view xml:lang="en">&supply.en;</ts:view>
        </ts:action>

        <ts:action>
            <ts:name>
                <ts:string xml:lang="en">Withdraw</ts:string>
            </ts:name>
            <ts:attribute-type id="redeemAmount" syntax="1.3.6.1.4.1.1466.115.121.1.36">
                <ts:name>
                    <ts:string xml:lang="en">Amount to withdraw</ts:string>
                </ts:name>
                <ts:origins>
                    <ts:user-entry as="e18"/>
                </ts:origins>
            </ts:attribute-type>
            <ts:transaction>
                <ts:ethereum function="burn" contract="iSAI" as="uint">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                        <ts:uint256 ref="redeemAmount"/>
                    </ts:data>
                </ts:ethereum>
            </ts:transaction>
            <style type="text/css">&style;</style>
            <ts:view xml:lang="en">&withdraw.en;</ts:view>
        </ts:action>


    </ts:cards>

    <ts:attribute-types>

        <ts:attribute-type id="allowance" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:origins>
                <ts:ethereum function="allowance" contract="SAI" as="uint">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                        <ts:address>0x14094949152eddbfcd073717200da82fed8dc960</ts:address>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <!-- your balance in SAI (not compound SAI) -->
        <ts:attribute-type id="tokenBalance" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Balance</ts:string>
                <ts:string xml:lang="zh">餘額</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="balanceOf" contract="SAI" as="uint">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <!-- SAI to iSAI exchange rate -->
        <ts:attribute-type id="exchangeRate" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Exchange Rate</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="exchangeRateCurrent" contract="iSAI" as="uint">
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="iTokenBalance" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Balance</ts:string>
                <ts:string xml:lang="zh">餘額</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="balanceOf" contract="iSAI" as="uint">
                    <ts:data>
                        <ts:address ref="ownerAddress"/>
                    </ts:data>
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

        <ts:attribute-type id="interestRateSupply" syntax="1.3.6.1.4.1.1466.115.121.1.36">
            <ts:name>
                <ts:string xml:lang="en">Supply Interest Rate</ts:string>
            </ts:name>
            <ts:origins>
                <ts:ethereum function="supplyInterestRate" contract="iSAI" as="uint">
                </ts:ethereum>
            </ts:origins>
        </ts:attribute-type>

    </ts:attribute-types>
</ts:token>
